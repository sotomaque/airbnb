{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "@api": ["src/API.ts"],
      "@components": ["src/components"],
      "@constants/*": ["src/constants/*"],
      "@graphql/*": ["src/graphql/*"],
      "@hooks/*": ["src/hooks/*"],
      "@navigation": ["src/navigation"],
      "@screens": ["src/screens"],
      "@utils": ["src/utils"]
    }
  }
}
